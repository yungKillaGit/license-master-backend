{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["src/types"]
  },
  "include": [
    "./*.js",
    "./*.ts",
    "src/**/*.ts",
    "drizzle.config.ts",
    ".eslintrc.js",
    "vitest.config.mts"
  ]
}
